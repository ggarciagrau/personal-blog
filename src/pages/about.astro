---
import BaseLayout from "../layouts/BaseLayout..astro";

const pageTitle = "About page";

const skills = ["Vue.js", "React.js", "Laravel"];

const working = true;

const skillColor = "navy";
---

<BaseLayout pageTitle={pageTitle}>
  {working && <p>I'm not searching a job</p>}
  {working ? <p>Currently employed</p> : <p>Currently not employed</p>}
  {!working && <p>I'm searching a job</p>}
  <p>My skills</p>
  <ul>
    {skills.map((skill) => <li class="skill">{skill}</li>)}
  </ul>
</BaseLayout>

<style define:vars={{ skillColor }}>
  h1 {
    color: purple;
    font-size: 4rem;
  }
  .skill {
    color: var(--skillColor);
    font-weight: bold;
  }
</style>
